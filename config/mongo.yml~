defaults: &defaults
  host: 127.0.0.1
  port: 27017

development:
  <<: *defaults
  database: ruby_mongo_granny

test:
  <<: *defaults
  database: ruby_mongo_granny

# set these environment variables on your prod server
production:
  <<: *defaults
  database: ruby_mongo_granny
  username: <%= ENV['MONGO_USERNAME'] %>
  password: <%= ENV['MONGO_PASSWORD'] %>
